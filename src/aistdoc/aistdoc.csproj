<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

    <RootNamespace>Aistant</RootNamespace>
    <Product>aistdoc</Product>
    <Version>1.0.6</Version>
    <AssemblyVersion>1.0.6.10</AssemblyVersion>
    <FileVersion>1.0.6.10</FileVersion>
    <Title>Aistdoc</Title>
    <Description>A .NET Core global tool that generates documentation (an API reference) for your .NET/C# code (with XML Documentation comments) and publishes it on the web via Aistant (https://aistant.com) service.</Description>
    <Authors>Sergiy Korzh, Anton Ivanenko</Authors>
    <Copyright>Copyright 2018 (c) Sergiy Korzh. All rights reserved.</Copyright>
    <RepositoryUrl>https://github.com/korzh/aistdoc</RepositoryUrl>

    <PackageVersion>1.0.6</PackageVersion>
    <PackageOutputPath>./dist</PackageOutputPath>
    <PackageId>Aistant.DocImport</PackageId>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageTags>aistant doc documentation api reference xmldocs comments</PackageTags>
    <PackageProjectUrl>https://github.com/korzh/aistdoc</PackageProjectUrl>
    <PackageIconUrl>https://aistant.com/assets/img/logo-small.png</PackageIconUrl>
    <PackageLicenseUrl>https://github.com/korzh/aistdoc/blob/master/LICENSE</PackageLicenseUrl>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>aistdoc</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\config.json" />
    <None Remove="Resources\help.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\config.json" />
    <EmbeddedResource Include="Resources\help.txt" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="MarkdownGenerator\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="2.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AistantKbService\KbService.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="aistdoc.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
